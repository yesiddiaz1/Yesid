# Clase base
class Producto:
    def __init__(self, nombre, precio):
        self.nombre = nombre
        self.precio = precio

    def mostrar_info(self):
        print(f"Producto: {self.nombre}, Precio: ${self.precio}")

# Clase derivada
class Libro(Producto):
    def __init__(self, nombre, autor, precio, cantidad):
        super().__init__(nombre, precio)
        self.autor = autor
        self.cantidad = cantidad

    # Sobrescribir método
    def mostrar_info(self):
        print(f"Libro: {self.nombre}, Autor: {self.autor}, Precio: ${self.precio}, Cantidad: {self.cantidad}")

    def valor_total(self):
        return self.precio * self.cantidad

# Programa principal
def main():
    libros = [
        Libro("Cien años de soledad", "Gabriel Garcia Marquez", 55000, 10),
        Libro("La hojarasca", "Gabriel Garcia Marquez", 60000, 3),
        Libro("El coronel no tiene quien le escriba", "Gabriel Garcia Marquez", 65000, 0)
    ]

    valor_inventario = 0
    print("Listado de libros en inventario:")
    for libro in libros:
        libro.mostrar_info()
        valor_inventario += libro.valor_total()
        if libro.cantidad < 5:
            print("  -> Atención: Stock bajo!")

    print(f"\nValor total del inventario: ${valor_inventario}")

if __name__ == "__main__":
    main()

